---
import Layout from "../layouts/Layout.astro";
import { books } from "../data/book.js"

const { book } = Astro.params

const info = books.find(b => b.id === book)

if(!info){
    return Astro.redirect("/404")
}
---

<Layout title={`Libro ${info.title}`}>
    <main class="m-auto max-w-4xl">
        <div class="flex flex-col gap-x-4 justify-center items-centers">
            <a href={`/books`} class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-full text-sm p-2.5 text-center inline-flex items-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800 w-[36px] m-auto mt-10">
                <svg class="w-4 h-4 rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                  <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
                </svg>
                <span class="sr-only">Icon description</span>
            </a>
            <h1
            class="scale-75 bg-gradient-to-r font-black uppercase text-4xl md:text-8xl text-center py-8 from-green-300 via-blue-500 to-purple-600 bg-clip-text text-transparent sm:text-5xl"
            style="view-transition"
            >
            Libros de 
            <span class="block text-[36px] md:text-[58px]">programaci√≥n</span>
        </h1>
        </div>
        <div class="grid grid-cols-1 lg:grid-cols-[350px_1fr] gap-x-8">
            <div class="flex flex-col space-y-5">
                <picture>
                    <img class="aspect-[389/500] h-full object-cover w-full max-w-full rounded" src={info.img} 
                    alt={`Portada de ${info.title}`} 
                    style={`view-transition-name: book-${info.id}`}
                    />
                </picture>
                <a href="#" class="text-white justify-center bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 inline-flex items-center mr-2 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                    <svg class="w-3.5 h-3.5 mr-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 18 21">
                      <path d="M15 12a1 1 0 0 0 .962-.726l2-7A1 1 0 0 0 17 3H3.77L3.175.745A1 1 0 0 0 2.208 0H1a1 1 0 0 0 0 2h.438l.6 2.255v.019l2 7 .746 2.986A3 3 0 1 0 9 17a2.966 2.966 0 0 0-.184-1h2.368c-.118.32-.18.659-.184 1a3 3 0 1 0 3-3H6.78l-.5-2H15Z"/>
                    </svg>
                    Comprar ahora
                </a>
            </div>
            <aside>
                <h2 class="text-6xl font-black mb-4 bg-gradient-to-r from-green-300 via-blue-500 to-purple-600 bg-clip-text text-transparent">{info.title}</h2>
                <p class="text-lg mb-4 text-white">{info.opinion}</p>
                <p><strong class="text-white">Autor:</strong> <span class="font-semibold text-gray-300">{info.author}</span></p>
            </aside>
        </div>
    </main>

</Layout>